          <!-- BD -->
          <div class="bg-zinc-200 dark:bg-slate-700 rounded-3xl mt-5 px-4 xl:px-10 2xl:px-16 py-6 xl:py-10 md:py-8 text-center">
            <p class="dark:text-white text-2xl md:text-3xl font-bold">{translations.skills.bd}</p>
            <div class="grid grid-cols-3 gap-x-4 xl:gap-x-6 2xl:gap-x-20 mt-7">
              <div class="flex flex-col justify-center items-center">
                <img
                  src="/icon_sqlserver_white.svg"
                  class="hidden dark:block w-14 md:w-20 hover:scale-125 transition duration-700 ease-in-out"
                  alt=""
                />
                <img
                  src="/icon_sqlserver_black.svg"
                  class="dark:hidden w-14 md:w-20 hover:scale-125 transition duration-700 ease-in-out"
                  alt=""
                />
                <p class="dark:text-white text-xl md:text-2xl mt-3 font-bold">SQL Server</p>
              </div>
              <div class="flex flex-col justify-center items-center">
