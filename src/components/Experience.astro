--- 
const translations = Astro.props.translations;
---

{
  translations ? (
    <section id="experience">
        <div class="pt-24 px-4 md:px-20 xl:px-24">
            <h2 class="text-4xl md:text-5xl text-green-500 font-bold mb-6">{translations.experience.grandtittle}</h2>
            <div class="relative border-l-2 border-green-500 dark:border-green-400 pl-6">
                <!-- Evento -->
                <div class="relative mb-10">
                <!-- Punto de la línea de tiempo -->
                    <div class="absolute -left-[32.7px] top-0 w-4 h-4 bg-green-500 dark:bg-green-400 rounded-full"></div>
                    <!-- Contenido del evento -->
                    <div>
                        <h3 class="text-xl md:text-3xl font-bold text-green-500 dark:text-green-400">{translations.experience.first.tittle}</h3>
                        <p class="text-lg md:text-2xl font-medium text-gray-600 dark:text-gray-300">{translations.experience.first.subtittle}</p>
                        <span class="block text-sm md:text-xl text-gray-500 dark:text-gray-400 mb-3">{translations.experience.first.date}</span>
                        <ul class="list-disc pl-5 text-lg md:text-2xl text-gray-700 dark:text-gray-300 space-y-1">
                        <li>{translations.experience.first.paragraph.one}</li>
                        <li>{translations.experience.first.paragraph.two}</li>
                        <li>{translations.experience.first.paragraph.three}</li>
                        <li>{translations.experience.first.paragraph.four}</li>
                        </ul>
                    </div>
                </div>

                <!-- Evento -->
                <div class="relative mb-10">
                <!-- Punto de la línea de tiempo -->
                    <div class="absolute -left-[32.7px] top-0 w-4 h-4 bg-green-500 dark:bg-green-400 rounded-full"></div>
                    <!-- Contenido del evento -->
                    <div>
                        <h3 class="text-xl md:text-3xl font-bold text-green-500 dark:text-green-400">{translations.experience.second.tittle}</h3>
                        <p class="text-lg md:text-2xl font-medium text-gray-600 dark:text-gray-300">{translations.experience.second.subtittle}</p>
                        <span class="block text-sm md:text-xl text-gray-500 dark:text-gray-400 mb-3">{translations.experience.second.date}</span>
                        <ul class="list-disc pl-5 text-lg md:text-2xl text-gray-700 dark:text-gray-300 space-y-1">
                        <li>{translations.experience.second.paragraph.one}</li>
                        <p class="font-bold">{translations.experience.second.tech}</p>
                        <div class="flex flex-row justify-between md:justify-start pt-4 pb-2 md:pb-8">
                            <div>
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-28 justify-around px-4 md:px-5 py-0.5 md:py-1 md:mr-3 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_astro_white.svg"
                                    alt=""
                                    class="hidden dark:block w-3 mr-1"
                                />
                                <img
                                    src="/icon_astro_dark.svg"
                                    alt=""
                                    class="dark:hidden w-3 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">Astro</p>
                                </a>
                            </div>
                            <div>
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-36 justify-around px-4 md:px-5 py-0.5 md:py-1 mr-10 md:mr-3 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_tailwind_white.svg"
                                    alt=""
                                    class="hidden dark:block w-4 mr-1"
                                />
                                <img
                                    src="/icon_tailwind_black.svg"
                                    alt=""
                                    class="dark:hidden w-4 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">Tailwind</p>
                                </a>
                            </div>
                            <div class="hidden md:block">
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-40 justify-around px-4 md:px-5 py-0.5 md:py-1 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_typescript_white.svg"
                                    alt=""
                                    class="hidden dark:block w-4 mr-1"
                                />
                                <img
                                    src="/icon_typescript_black.svg"
                                    alt=""
                                    class="dark:hidden w-4 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">TypeScript</p>
                                </a>
                            </div>
                        </div>
                        <div class="md:hidden flex flex-row pt-2 pb-10">
                            <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-40 justify-around px-4 py-0.5 rounded-3xl items-center transition duration-700 ease-in-out">
                            <img
                                src="/icon_typescript_white.svg"
                                alt=""
                                class="hidden dark:block w-4 mr-1"
                            />
                            <img
                                src="/icon_typescript_black.svg"
                                alt=""
                                class="dark:hidden w-4 mr-1"
                            />
                            <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">TypeScript</p>
                            </a>
                        </div>
                        <li>{translations.experience.second.paragraph.two}</li>
                        <p class="font-bold">{translations.experience.second.tech}</p>
                        <div class="flex flex-row justify-between md:justify-start pt-4 pb-2">
                            <div>
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-32 justify-around px-4 py-0.5 md:py-1 md:mr-3 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_angular_white.svg"
                                    alt=""
                                    class="hidden dark:block w-4 mr-1"
                                />
                                <img
                                    src="/icon_angular_black.svg"
                                    alt=""
                                    class="dark:hidden w-4 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">Angular</p>
                                </a>
                            </div>
                            <div>
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-36 justify-around px-4 py-0.5 md:py-1 mr-6 md:mr-3 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_tailwind_white.svg"
                                    alt=""
                                    class="hidden dark:block w-4 mr-1"
                                />
                                <img
                                    src="/icon_tailwind_black.svg"
                                    alt=""
                                    class="dark:hidden w-4 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">Tailwind</p>
                                </a>
                            </div>
                            <div class="hidden md:block">
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-40 justify-around px-3 py-0.5 md:py-1 md:mr-3 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_typescript_white.svg"
                                    alt=""
                                    class="hidden dark:block w-4 mr-1"
                                />
                                <img
                                    src="/icon_typescript_black.svg"
                                    alt=""
                                    class="dark:hidden w-4 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">TypeScript</p>
                                </a>
                            </div>
                        </div>
                        <div class="flex flex-row justify-between pt-2 pb-10">
                            <div class="md:hidden">
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-40 justify-around px-3 py-0.5 md:py-1 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_typescript_white.svg"
                                    alt=""
                                    class="hidden dark:block w-4 mr-1"
                                />
                                <img
                                    src="/icon_typescript_black.svg"
                                    alt=""
                                    class="dark:hidden w-4 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">TypeScript</p>
                                </a>
                            </div>
                            <div>
                                <a class="flex border-2 border-black shadow-black dark:border-white shadow-md dark:shadow-white w-32 justify-around px-4 py-0.5 md:py-1 mr-2 rounded-3xl items-center transition duration-700 ease-in-out">
                                <img
                                    src="/icon_nestjs_white.svg"
                                    alt=""
                                    class="hidden dark:block w-4 mr-1"
                                />
                                <img
                                    src="/icon_nestjs_black.svg"
                                    alt=""
                                    class="dark:hidden w-4 mr-1"
                                />
                                <p class="font-bold text-black dark:text-white text-sm md:text-lg tracking-widest">NestJS</p>
                                </a>
                            </div>
                        </div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
  ) : (
    <p>Error: Traducciones no encontradas.</p>
  )
}

<style>
  section {
    font-family: "Anaheim", system-ui;
    font-optical-sizing: auto;
    font-weight: 200;
    font-style: normal;
  }
</style>
